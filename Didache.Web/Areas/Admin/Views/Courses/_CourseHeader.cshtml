@model Didache.Course

<div class="page-header">
	<h2>@Model.CourseCode @Model.Section</h2>
	<h3>@Model.FacultyFullNames</h3>
</div>

<ul class="page-menu">
	@foreach(var page in new[] {
								new {Url="courseeditor", Name="Units and Tasks"},
								new {Url="files", Name="Files"},
								new {Url="users", Name="Users"},
								new {Url="usergroups", Name="Groups"},
								new {Url="grading", Name="Grading"}
								}
	) {
		<li><a href="/admin/courses/@page.Url/@Model.CourseID" @(Request.Url.ToString().Contains(page.Url) ? " class=selected" : "")>@page.Name</a></li>
	}
</ul>