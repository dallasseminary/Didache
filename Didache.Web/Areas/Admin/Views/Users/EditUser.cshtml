@model Didache.User

@{
    ViewBag.Title = "EditUser";
}

<div class="page-wide">
	<div class="full-column">
		<div class="page-header">
			<h2>Edit User</h2>
		</div>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

	@Html.HiddenFor(m => m.UserID)
	
		<table class="admin-table">
			<tbody>
				<tr>
					<th>ID</th>
					<td>@Model.UserID</td>
				</tr>
				<tr>
					<th>Nick</th>
					<td>@Model.NickName</td>
				</tr>
				<tr>
					<th>First</th>
					<td>@Model.FirstName</td>
				</tr>
				<tr>
					<th>Middle</th>
					<td>@Model.MiddleName</td>
				</tr>
				<tr>
					<th>Last</th>
					<td>@Model.LastName</td>
				</tr>
				<tr>
					<th>Last</th>
					<td>@Model.LastName</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>@Model.Email</td>
				</tr>
				<tr>
					<th>Username</th>
					<td>@Model.Username</td>
				</tr>
				<tr>
					<th>Roles</th>
					<td>
						@foreach (string role in ViewBag.AllRoles) {
							<input type="checkbox" name="roles" value="@role" id="role-@role" @(ViewBag.UsersRoles.Contains(role) ? " checked" : "")	 /><label for="role-@role">@role</label><br />					
						}		
					</td>
				</tr>
			</tbody>
		</table>
	
	 <input type="submit" value="Save" class="d-button action" />
}

</div>
</div>
