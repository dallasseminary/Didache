@model List<DiscussionGroup>

@{
    ViewBag.Title = "Discussion Groups";
}

<div class="page-wide">
	<div class="page-full">
		<div class="page-header">
		
			<h2>All Groups</h2>

@if (Model != null && Model.Count > 0) {
	<table class="admin-list">
		<thead>
			<tr>
				<th></th>
				<th>Type</th>
				<th>App</th>
				<th>Name</th>
				<th>Members</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
		@foreach (DiscussionGroup group in Model) {
			<tr>
				<td><img src="@group.ThumbImageUrl" width="30" height="30" /></td>
				<td>@group.GroupType</td>
				<td><input type="checkbox" disabled @(group.IsApproved ? "checked" : "") /></td>
				<td><a href="@group.GroupUrl">@group.Name</a></td>
				<td>@group.GroupMembers.Count</td>
				
				<td>
					<a href="/admin/discussiongroups/edit/@group.GroupID">edit</a>
				</td>
			</tr>
  }
		</tbody>
	</table>

}


		
		</div>
	</div>
</div>