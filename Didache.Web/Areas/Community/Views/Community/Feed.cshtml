@model List<UserAction>

@{
    ViewBag.Title = "Feed";
}

<style>
.useraction-item {
	overflow: hidden;
	margin: 0 -20px;
	padding: 20px;
	border-bottom: solid 1px #ccc;
}
.useraction-item .useraction-photo {
	width: 40px;
	float: left;
}
.useraction-item .useraction-info {
	width: 350px;
	float: left;
	margin: 0 0 0 20px;
}
.useraction-item .useraction-date {
	width: 100px;
	float: left;
	margin: 0 0 0 20px;
	color: #999;
	font-size: 10px;
	font-weight: bold;
}
</style>

<div class="page-narrow">
	<div class="main-column">
		<div class="page-header">
			<h2>Feed</h2>
			<h3>What's happening at DTS</h3>
		</div>

		@foreach (UserAction ua in Model) {
			<div class="useraction-item">
				<div class="useraction-photo">
					<img src="@ua.SourceUser.GetProfileImageUrl(40,40)" />
				</div>
				<div class="useraction-info">
					<a href="@ua.SourceUser.ProfileDisplayUrl">@ua.SourceUser.SecureFormattedName</a>
					@Html.Raw(ua.FormattedDescription)
				</div>
				<div class="useraction-date">
					@ua.ActionDate.ToString("MM/dd/yy hh:mm tt")
				</div>
			
			</div>
		}


	</div>
</div>
