@model Didache.Course

@{
	ViewBag.Title = Model.CourseCode + Model.Section + " " + Didache.Resources.labels.courses_heading_tools;
}

<div class="page-wide">

@Html.Partial("_CourseHeader", Model)
@Html.Partial("_CourseMenu")

	<div class="full-column">
	
		<h3>@Didache.Resources.labels.courses_tools_itunes</h3>

		<p>@Didache.Resources.labels.courses_tools_itunes_desc</p>

		<div class="message-warning">
		The iTunes feed isn't quite working right yet. We'll have it fixed for the second week of class.
		</div>

		<p><a href="https://@(Request.Url.Host)/courses/feed/@(Users.GetLoggedInUser().UserID)/@ViewContext.RouteData.Values["slug"]-all.xml"><img src="/css/images/itunes-badge.jpg"></a>			
			</p>
	

		<h3>@Didache.Resources.labels.courses_tools_icalendar</h3>

		<p>@Didache.Resources.labels.courses_tools_icalendar_desc</p>

		<ul>
			<li>				
				<a href="https://@(Request.Url.Host)/courses/ical/@(Users.GetLoggedInUser().UserID)/@ViewContext.RouteData.Values["slug"]-tasks.ics">Download ICS file</a> (Google Calendar)
			</li>
			<li>
				<a href="webcal://@(Request.Url.Host)/courses/ical/@(Users.GetLoggedInUser().UserID)/@ViewContext.RouteData.Values["slug"]-tasks.ics">Import ICS</a> (Apple Mail, Outlook)
			</li>
		</ul>

	</div>
	

</div>