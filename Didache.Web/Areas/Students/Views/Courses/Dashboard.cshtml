@model Didache.Course

@{
	ViewBag.Title = Model.CourseCode + Model.Section + " " + Resources.labels.coursetabs_dashboard;
}

<div class="page-wide">

	@Html.Partial("_CourseHeader", Model)
	@Html.Partial("_CourseMenu")

	<div class="main-column">

		
		@{ CourseFileAssociation syllabus = new DidacheDb().CourseFileAssociations.SingleOrDefault(cfa => cfa.CourseFileGroup.CourseID == Model.CourseID && cfa.CourseFile.Title.Contains("Syllabus"));}
		@if (syllabus != null) {
			<a href="@syllabus.CourseFile.FileUrl">Syllabus</a>
		}
		
