@model Didache.UserTaskData


@if (Model.TaskCompletionStatus == TaskCompletionStatus.NotStarted) {
	
	<div class="turn-in-form">
	<form method="post" enctype="multipart/form-data" action="/courses/api/taskfile/@Model.TaskID" id="task-submit-@Model.TaskID">
		<textarea name="usercomment" class="required"></textarea>
		<input type="file" name="StudentFile" class="required" @Html.Raw(!String.IsNullOrEmpty(Model.Task.FileTypesAllowed) ? " accept=\"" + Model.Task.FileTypesAllowed + "\"" : "") data-val-accept="Sorry, accept files with these extensions: @Model.Task.FileTypesAllowed." />

		<input type="submit" value="@Didache.Resources.labels.studentschedule_submitfordiscussion" class="d-button action task-submit" />

	</form>
	@if (!String.IsNullOrEmpty(Model.Task.FileTypesAllowed)) {
	 <p>Please submit one of the following file types: @Model.Task.FileTypesAllowed.Replace("|",", ")</p>
	 }
	</div>

	<!--
	if (Model.Task.IsSkippable) {
		<input type="submit" name="TaskStatus" value="Skipped"  />
	}
	-->	

}

<script type="text/javascript">
	jQuery(function ($) {
		$(".transparent-upload input[type=file]").change(function () {
			
			var fileInput = $(this),
				filename = fileInput.val();

			fileInput.siblings('[type="button"]').val(filename);

		});
	});
</script>
