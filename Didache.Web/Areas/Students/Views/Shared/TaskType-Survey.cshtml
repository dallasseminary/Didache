@model Didache.UserTaskData
		   	
@helper CreateFivePointRating(string name) {
	<text>
		<fieldset>
			<span>
				<label for="@(name)_na">N/A</label>
				<input type="radio" id="@(name)_na" name="@name" value="-1" class="required" />
			</span>
			<span>
				<label for="@(name)_1">1</label>
				<input type="radio" id="@(name)_1" name="@name" value="1"  />
			</span>
			<span>
				<label for="@(name)_2">2</label>
				<input type="radio" id="@(name)_2" name="@name" value="2"  />
			</span>
			<span>
				<label for="@(name)_3">3</label>
				<input type="radio" id="@(name)_3" name="@name" value="3" />
			</span>
			<span>
				<label for="@(name)_4">4</label>
				<input type="radio" id="@(name)_4" name="@name" value="4"  />
			</span>
			<span>
				<label for="@(name)_5">5</label>
				<input type="radio" id="@(name)_5" name="@name" value="5"  />
			</span>
		</fieldset>
	</text>
}	

@if (Model.TaskCompletionStatus == TaskCompletionStatus.Completed) {
	@Didache.Resources.labels.survey_thankyou
}
else {
	
<style>
.survey-group {
	border: solid 10px #EEE;
	padding: 15px;
	overflow: hidden;
}
.survey-group h5 {
	font-weight: bold;
	font-size: 13px;
	color: #666;
	margin: 20px 0 0 0;
}
.survey-group table {
	width: 100%;
	border-collapse: collapse;
}
.survey-group th, .survey-group td {
	padding: 0 4px;
	font-size: 11px;
}
.survey-group th {
	text-align: left;
	font-weight: bold;
	padding-top: 5px;
}
.survey-group td.label {
	padding-left: 15px;
}
.survey-group td.survey-input {
	text-align: right;
	width: 260px;
}
.survey-group td.survey-input span {
	display: inline-block;
	margin: 0 0 0 6px ;
}
.survey-group textarea {
	width: 520px;
	height: 80px;
	resize: none;
	margin: 0 0 20px 0;
}

.survey-group .d-button {
	float: right;
}
.survey-group .input-validation-error {
	outline: dotted 1px #ff0000;
}
.survey-group .input-validation-error:focus {
	outline: dotted 1px #ff0000;
}
.survey-group .error {
	background: pink;
}
</style>

	
<p>@Didache.Resources.labels.survey_header_instructions</p>
	
