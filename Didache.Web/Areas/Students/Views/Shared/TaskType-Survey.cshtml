		</table>

		<h5>@Didache.Resources.labels.survey_header_comments</h5>

		<p>@Didache.Resources.labels.survey_header_comments_desc</p>

		<textarea id="Comments" name="Comments"></textarea>

		<p>@Didache.Resources.labels.survey_footer</p>


		<input type="submit" value="@Didache.Resources.labels.survey_submitsurvey" class="d-button action" />

	</div>

	

</form>
	
}