@{
    ViewBag.Title = "DTS Online Ed";
    
}



@if (Users.GetLoggedInUser() != null) {
	
<div id="dashboard">
    <div class="side">
        <div>
            <h3>Upcoming</h3>
			
			
			@foreach (UserTaskData task in Courses.GetImportantTasksForUser()) {
		    <div class="due-soon">
			    <span class="date">@(task.Task.DueDate.HasValue ? @task.Task.DueDate.Value.ToShortDateString() : "")</span> - @task.Task.Name
		    </div>
   }
			

        </div>
    </div>
    <div class="main">
        <div >
            <h2>What's Happening on MyDTS</h2>
            <ul>
           
            </ul>
        </div>
    </div>
    <div class="side">
        <div>
            <h3>Course Resources</h3>
            <ul>
                <li>Download your term calendar</li>
                <li><span class="icon compressed">Download all files (current courses)</span></li>
            </ul>

            <h3>Online Education Resources</h3>
            <ul>
                <li><a href="http://www.microsoft.com/downloads/details.aspx?FamilyId=941b3470-3ae9-4aee-8f43-c6bb74cd1466&displaylang=en">Microsoft Word Compatibility Pack</li>
